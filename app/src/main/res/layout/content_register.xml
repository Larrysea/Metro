<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/register_img_avatar"
            android:layout_width="@dimen/img_large"
            android:layout_height="@dimen/img_large"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#000"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/img_bottom_margin"
            android:text="@string/register_click_avatar"
            android:textSize="@dimen/text_mini" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_text_vertical_margin"
            android:layout_marginTop="@dimen/edit_text_vertical_margin">

            <EditText
                android:id="@+id/register_edt_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_blue_500_24dp"
                android:drawableStart="@drawable/ic_person_blue_500_24dp"
                android:hint="@string/register_account"
                android:textSize="@dimen/text_button" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_text_vertical_margin"
            android:layout_marginTop="@dimen/edit_text_vertical_margin">

            <EditText
                android:id="@+id/register_edt_pwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_outline_blue_500_24dp"
                android:drawableStart="@drawable/ic_lock_outline_blue_500_24dp"
                android:hint="@string/register_pwd1"
                android:textSize="@dimen/text_button" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_text_vertical_margin"
            android:layout_marginTop="@dimen/edit_text_vertical_margin">

            <EditText
                android:id="@+id/register_edt_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_outline_blue_500_24dp"
                android:drawableStart="@drawable/ic_lock_outline_blue_500_24dp"
                android:hint="@string/register_pwd2"
                android:textSize="@dimen/text_button" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/img_bottom_margin">

            <View
                android:id="@+id/line_left"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/colorDividerText" />

            <TextView
                android:id="@+id/tv_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/edit_text_vertical_margin"
                android:layout_marginLeft="@dimen/edit_text_vertical_margin"
                android:layout_marginRight="@dimen/edit_text_vertical_margin"
                android:layout_marginStart="@dimen/edit_text_vertical_margin"
                android:layout_toEndOf="@+id/line_left"
                android:layout_toRightOf="@+id/line_left"
                android:text="@string/register_face"
                android:textSize="@dimen/text_mini" />

            <View
                android:id="@+id/line_right"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_third"
                android:layout_toRightOf="@+id/tv_third"
                android:background="@color/colorDividerText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_img_face1"
                android:layout_width="@dimen/img_large"
                android:layout_height="@dimen/img_large"
                android:layout_weight="1"
                android:src="@drawable/ic_crop_free_pink_a200_48dp" />

            <ImageView
                android:id="@+id/register_img_face2"
                android:layout_width="@dimen/img_large"
                android:layout_height="@dimen/img_large"
                android:layout_weight="1"
                android:src="@drawable/ic_crop_free_pink_a200_48dp" />

            <ImageView
                android:id="@+id/register_img_face3"
                android:layout_width="@dimen/img_large"
                android:layout_height="@dimen/img_large"
                android:layout_weight="1"
                android:src="@drawable/ic_crop_free_pink_a200_48dp" />

        </LinearLayout>

        <Button
            android:id="@+id/register_btn_register"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="@string/register"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>